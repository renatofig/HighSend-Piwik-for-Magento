<config>
    <sections>
        <piwik translate="label" module="piwikanalytics">
            <label>HighSend + Piwik</label>
            <tab>sales</tab>
            <frontend_type>text</frontend_type>
            <sort_order>350</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
			    <settings>
	            	<label>HighSend Integration</label>
					<frontend_type>text</frontend_type>
                    <comment><![CDATA[<a href="http://highsend.com/pages/pricing/" target="_blank">Signup for HighSend</a>]]></comment>
	            	<sort_order>9</sort_order>
	            	<show_in_default>1</show_in_default>
	            	<show_in_website>1</show_in_website>
	            	<show_in_store>1</show_in_store>
	            	<fields>		
						<api_key>
	            			<label>API Key</label>
							<comment>Find under Settings <![CDATA[>]]> API <![CDATA[&]]> FTP on HighSend.com</comment>
	            			<frontend_type>text</frontend_type>
	            			<sort_order>11</sort_order>
	            			<show_in_default>1</show_in_default>
	            			<show_in_website>1</show_in_website>
	            			<show_in_store>1</show_in_store>
	            		</api_key>	
						<list_name>
	            			<label>List Name</label>
							<comment>The name of your HighSend subscriber list.</comment>
	            			<frontend_type>text</frontend_type>
	            			<sort_order>11</sort_order>
	            			<show_in_default>1</show_in_default>
	            			<show_in_website>1</show_in_website>
	            			<show_in_store>1</show_in_store>
	            		</list_name>
	            	</fields>					
            	</settings>
                <analytics translate="label">
                    <label>Piwik Analytics</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <active translate="label">
                            <label>Enable</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </active>
                       
						<install translate="label">
                            <label>Install Path</label>
							<comment>i.e. http://www.example.com/piwik/</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </install>


					   <site translate="label">
                            <label>Site Id</label>
							<comment>Default is 1</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </site>
						
						
						   <pwtoken translate="label">
                            <label>Piwik Auth Token</label>
							<comment>Find in your API Tab of Piwik Install</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
							</pwtoken>
						
						
                    </fields>
              </analytics>
            </groups>
        </piwik>
    </sections>
</config>
